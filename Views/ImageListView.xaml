<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Airbox.ViewModels"
             x:Class="Airbox.Views.ImageListView"
             x:DataType="vm:ImageListViewModel"
             Title="{Binding ImageList.Title}">

    <CollectionView ItemsSource="{Binding ImageList.Files}"
                    SelectionMode="Single"
                    SelectedItem="{Binding SelectedImage}">

        <CollectionView.ItemsLayout>
            <GridItemsLayout HorizontalItemSpacing="4" 
                             VerticalItemSpacing="4"
                             Orientation="Vertical"
                             Span="{Binding Span}"/>
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="{x:Type x:String}">
                <Grid WidthRequest="{Binding Source={RelativeSource FindAncestorBindingContext, AncestorType={x:Type vm:ImageListViewModel}}, Path=ImageWidth}"
                      HeightRequest="{Binding Source={RelativeSource FindAncestorBindingContext, AncestorType={x:Type vm:ImageListViewModel}}, Path=ImageWidth}">
                    <Image Source="{Binding .}"
                           Aspect="AspectFit"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage>
